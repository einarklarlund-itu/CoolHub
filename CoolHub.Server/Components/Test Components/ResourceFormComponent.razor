@using CoolHub.ViewModels
@using CoolHub.Models
@using CoolHub.Entities
@using System.Diagnostics

@namespace CoolHub

<hr />

<EditForm Model="@Resource" OnValidSubmit="@CreateResource">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="col-4">
        <div class="form-group">
            <label for="name">Name</label>
            <InputText class="form-control" id="name" @bind-Value=@Resource.Name />
        </div>
        <div class="form-group">
            <label for="notes">Description</label>
            <InputTextArea class="form-control" id="description" @bind-Value=@Resource.Description />
        </div>
        <div class="form-group">
            <label for="url">URL</label>
            <InputText class="form-control" id="url" @bind-Value=@Resource.Url />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</EditForm>


@code {
    [CascadingParameter(Name = "TopicViewModel")]
    TopicViewModel TopicViewModel { get; set; }

    private ResourceCreateDTO Resource = new ResourceCreateDTO();

    private void CreateResource()
    {
        TopicViewModel.CreateResource(Resource);

        Resource = new ResourceCreateDTO();
    }
}